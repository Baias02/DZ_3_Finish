<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="13dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="387dp"
        android:layout_height="194.02dp"
        android:background="@drawable/burger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/text_name"
        android:layout_width="138dp"
        android:layout_height="29dp"
        android:text="Text "
        android:layout_marginTop="12.98dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"/>
    
    <TextView
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="@drawable/ic_toch"
        app:layout_constraintStart_toEndOf="@id/text_name"
        app:layout_constraintTop_toTopOf="@id/text_name"
        app:layout_constraintBottom_toBottomOf="@id/text_name"/>
    
    <TextView
        android:id="@+id/text_time"
        android:layout_width="84dp"
        android:layout_height="34dp"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/orange"
        android:text="time"
        android:textColor="@color/white"
        android:layout_marginTop="13dp"
        android:textSize="14sp"
        android:gravity="center"/>

    <TextView
        android:layout_width="48dp"
        android:layout_height="22dp"
        android:layout_marginTop="16.5dp"
        android:layout_marginStart="10dp"
        android:text="OPEN"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/green"
        app:layout_constraintStart_toEndOf="@id/text_name"
        app:layout_constraintTop_toBottomOf="@id/image"/>

    <TextView
        android:id="@+id/star"
        android:layout_width="13dp"
        android:layout_height="12dp"
        android:background="@drawable/ic_star"
        android:layout_marginVertical="7dp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_name"/>

    <TextView
        android:id="@+id/text_estimation"
        android:layout_width="65dp"
        android:layout_height="18dp"
        android:text="text"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginStart="7dp"
        android:layout_marginVertical="4dp"
        app:layout_constraintStart_toEndOf="@id/star"
        app:layout_constraintTop_toBottomOf="@id/text_name"/>

    <TextView
        android:id="@+id/text_country"
        android:layout_width="64dp"
        android:layout_height="18dp"
        android:text="text"
        android:gravity="center"
        android:textColor="@color/grey"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="8.5dp"
        app:layout_constraintStart_toEndOf="@id/text_estimation"
        app:layout_constraintTop_toBottomOf="@id/text_name" />

    <TextView
        android:id="@+id/meal_name"
        android:layout_width="64dp"
        android:layout_height="18dp"
        android:text="text"
        android:gravity="center"
        android:textColor="@color/grey"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="8.5dp"
        app:layout_constraintStart_toEndOf="@id/text_country"
        app:layout_constraintTop_toBottomOf="@id/text_name" />

    <TextView
        android:id="@+id/free_club"
        android:layout_width="80dp"
        android:layout_height="14dp"
        android:text="text"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/grey"
        android:layout_marginVertical="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_estimation" />

    <TextView
        android:id="@+id/minimum"
        android:layout_width="80dp"
        android:layout_height="14dp"
        android:text="text"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:textColor="@color/grey"
        android:layout_marginVertical="4dp"
        app:layout_constraintStart_toEndOf="@id/free_club"
        app:layout_constraintTop_toBottomOf="@id/text_country" />
    
    <TextView
        android:id="@+id/text_km"
        android:layout_width="73dp"
        android:layout_height="17dp"
        android:text="text_km0"
        android:textColor="@color/grey"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <TextView
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_km"
        android:background="@drawable/ic_km"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>