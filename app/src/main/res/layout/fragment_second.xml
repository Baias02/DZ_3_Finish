<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SecondFragment">
    
    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_back"
            android:layout_margin="20dp"/>
        
        <TextView
            android:layout_width="52dp"
            android:layout_height="25dp"
            android:text="Menu"
            android:layout_marginVertical="20dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/group_deliveri"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="145dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/label_deli"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_vniz"
            android:backgroundTint="@color/green"
            android:layout_marginVertical="16dp"/>
        
    </LinearLayout>

    <EditText
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="12dp"
        android:hint="Search product by name"
        android:layout_marginTop= "16dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu"/>
    <ImageView
        android:id="@+id/second_image"
        android:layout_width="387dp"
        android:layout_height="194.02dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/burger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search"/>
    <TextView
        android:id="@+id/second_name"
        android:layout_width="138dp"
        android:layout_height="29dp"
        android:text="Text "
        android:layout_marginTop="12.98dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/second_image"
        app:layout_constraintTop_toBottomOf="@id/second_image"/>

    <TextView
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="@drawable/ic_toch"
        app:layout_constraintStart_toEndOf="@id/second_name"
        app:layout_constraintTop_toTopOf="@id/second_name"
        app:layout_constraintBottom_toBottomOf="@id/second_name"/>

    <TextView
        android:id="@+id/text_time"
        android:layout_width="84dp"
        android:layout_height="34dp"
        app:layout_constraintTop_toBottomOf="@id/second_image"
        app:layout_constraintEnd_toEndOf="@id/second_image"
        android:background="@color/grey_allow"
        android:text="time"
        android:textColor="@color/black"
        android:layout_marginTop="13dp"
        android:textSize="14sp"
        android:gravity="center"/>

    <TextView
        android:layout_width="48dp"
        android:layout_height="22dp"
        android:layout_marginTop="16.5dp"
        android:layout_marginStart="10dp"
        android:text="OPEN"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/green"
        app:layout_constraintStart_toEndOf="@id/second_name"
        app:layout_constraintTop_toBottomOf="@id/second_image"/>

    <TextView
        android:id="@+id/star"
        android:layout_width="13dp"
        android:layout_height="12dp"
        android:background="@drawable/ic_star"
        android:layout_marginVertical="7dp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toStartOf="@id/second_name"
        app:layout_constraintTop_toBottomOf="@id/second_name"/>

    <TextView
        android:id="@+id/second_estimation"
        android:layout_width="65dp"
        android:layout_height="18dp"
        android:text="text"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginStart="7dp"
        android:layout_marginVertical="4dp"
        app:layout_constraintStart_toEndOf="@id/star"
        app:layout_constraintTop_toBottomOf="@id/second_name"/>

    <TextView
        android:id="@+id/second_country"
        android:layout_width="64dp"
        android:layout_height="18dp"
        android:text="text"
        android:gravity="center"
        android:textColor="@color/grey"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="8.5dp"
        app:layout_constraintStart_toEndOf="@id/second_estimation"
        app:layout_constraintTop_toBottomOf="@id/second_name" />

    <TextView
        android:id="@+id/second_meal_name"
        android:layout_width="64dp"
        android:layout_height="18dp"
        android:text="text"
        android:gravity="center"
        android:textColor="@color/grey"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="8.5dp"
        app:layout_constraintStart_toEndOf="@id/second_country"
        app:layout_constraintTop_toBottomOf="@id/second_name" />

    <TextView
        android:id="@+id/second_free_club"
        android:layout_width="80dp"
        android:layout_height="14dp"
        android:text="text"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/grey"
        android:layout_marginVertical="4dp"
        app:layout_constraintStart_toStartOf="@id/star"
        app:layout_constraintTop_toBottomOf="@id/second_estimation" />

    <TextView
        android:id="@+id/second_minimum"
        android:layout_width="80dp"
        android:layout_height="14dp"
        android:text="text"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:textColor="@color/grey"
        android:layout_marginVertical="4dp"
        app:layout_constraintStart_toEndOf="@id/second_free_club"
        app:layout_constraintTop_toBottomOf="@id/second_country" />

    <TextView
        android:id="@+id/second_text_km"
        android:layout_width="73dp"
        android:layout_height="17dp"
        android:text="text_km0"
        android:textColor="@color/grey"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/second_minimum"
        app:layout_constraintEnd_toEndOf="@id/text_time"/>

    <TextView
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintBottom_toBottomOf="@id/second_text_km"
        app:layout_constraintEnd_toStartOf="@id/second_text_km"
        android:background="@drawable/ic_km"/>
    
    <TextView
        android:id="@+id/around"
        android:layout_width="97dp"
        android:layout_height="46dp"
        android:hint="around"
        android:gravity="end"
        android:padding="5dp"
        android:background="@color/grey_allow"
        app:layout_constraintBottom_toBottomOf="@id/second_image"
        app:layout_constraintEnd_toEndOf="@id/second_image"/>

    <TextView
        android:id="@+id/second_time_around"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/around"
        app:layout_constraintEnd_toEndOf="@id/around"
        android:text="text"
        android:layout_margin="6dp"/>

    <TextView
        android:id="@+id/second_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/second_free_club"
        app:layout_constraintTop_toBottomOf="@id/second_free_club"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>